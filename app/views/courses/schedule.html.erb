<div class="container-fluid">
  <div class="row">

    <div class="col-sm-2">
      <%= render "shared/sidenav" %>
    </div>

    <div class="col-sm-10">
      <div class="panel panel-primary filterable">
        <div class="panel-heading">
          <h3 class="panel-title">课程表</h3> 
        </div>

        <div class="panel-body">
          <table class="table table-striped table-bordered table-advance table-hover" style="table-layout:fixed;">
            <thead>
            <tr>
              <th style="width: 60px">节次/星期</th> 
              <th>星期一</th> 
              <th>星期二</th>  
              <th>星期三</th>  
              <th>星期四</th>  
              <th>星期五</th>  
              <th style="width: 80px">星期六</th>  
              <th style="width: 80px">星期日</th>
            </tr>

            <tbody>
              <% i=1 %>    
              <% for i in 1..11 %>
                  <tr>
                <th style="width: 50px"><%=i%></th>

                <%if "#{@course_hash["周一#{i}"].name}".length!=0%>
                <td>
                  <p><%=link_to @course_hash["周一#{i}"].name, detail_course_url(id:@course_hash["周一#{i}"].id),:name=>"周一#{i}"%></p>
                  <p><%=@course_hash["周一#{i}"].course_week%>,&nbsp;<%=@course_hash["周一#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>

                <%if "#{@course_hash["周二#{i}"].name}".length!=0%>
                <td>
                  <p><%=link_to @course_hash["周二#{i}"].name, detail_course_url(id:@course_hash["周二#{i}"].id),:name=>"周二#{i}"%></p>
                  <p><%=@course_hash["周二#{i}"].course_week%>,&nbsp;<%=@course_hash["周二#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>
 
                <%if "#{@course_hash["周三#{i}"].name}".length!=0%>
                <td>
                  <p><%=link_to @course_hash["周三#{i}"].name, detail_course_url(id:@course_hash["周三#{i}"].id),:name=>"周三#{i}"%></p>
                  <p><%=@course_hash["周三#{i}"].course_week%>,&nbsp;<%=@course_hash["周三#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>

                <%if "#{@course_hash["周四#{i}"].name}".length!=0%>
                <td>
                  <p><%=link_to @course_hash["周四#{i}"].name, detail_course_url(id:@course_hash["周四#{i}"].id),:name=>"周四#{i}"%></p>
                  <p><%=@course_hash["周四#{i}"].course_week%>,&nbsp;<%=@course_hash["周四#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>

                <%if "#{@course_hash["周五#{i}"].name}".length!=0%>
                <td>
                  <p><%=link_to @course_hash["周五#{i}"].name, detail_course_url(id:@course_hash["周五#{i}"].id),:name=>"周五#{i}"%></p>
                  <p><%=@course_hash["周五#{i}"].course_week%>,&nbsp;<%=@course_hash["周五#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>

                <%if "#{@course_hash["周六#{i}"].name}".length!=0%>
                <td style="width: 80px">
                  <p><%=link_to @course_hash["周六#{i}"].name, detail_course_url(id:@course_hash["周六#{i}"].id),:name=>"周六#{i}"%></p>
                  <p><%=@course_hash["周六#{i}"].course_week%>,&nbsp;<%=@course_hash["周六#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>

                <%if "#{@course_hash["周日#{i}"].name}".length!=0%>
                <td style="width: 80px">
                  <p><%=link_to @course_hash["周日#{i}"].name, detail_course_url(id:@course_hash["周日#{i}"].id),:name=>"周日#{i}"%></p>
                  <p><%=@course_hash["周日#{i}"].course_week%>,&nbsp;<%=@course_hash["周日#{i}"].class_room%></p>
                </td>
                <% else %>
                  <td></td>
                <% end %>
                </tr>
                <%i=i+1%>
              <% end %>           
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</div>